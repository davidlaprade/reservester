<%- model_class = Restaurant -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:address) %></th>
      <th><%= model_class.human_attribute_name(:phone) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= image_tag restaurant.image_url(:thumb).to_s %></td>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.description %></td>
        <td><%= restaurant.address %></td>
        <td><%= restaurant.phone %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      restaurant_path(restaurant), :class => 'btn btn-mini' %>

            <% if (current_owner.present?) && (restaurant.created_by.present?) && (current_owner.id == restaurant.owner_id) -%>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_restaurant_path(restaurant), :class => 'btn btn-mini' %>
            <%= link_to t('delete'),
                        restaurant_path(restaurant),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-mini btn-danger' %>
          <% end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if owner_signed_in? -%>
  <%= link_to t('Create_new_restaurant'),
              new_restaurant_path,
              :class => 'btn btn-primary' %>
<% end -%>