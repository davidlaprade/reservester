<%- model_class = Restaurant -%>

<header class="jumbotron subhead" id="overview" style="padding-top:40px">

  <div class="container">
    <h1>Your meal. Your choice.</h1>
    <p class="lead"><i>Choose from reservations at any of the following world-class establishments</i></p>
  </div>
</header>


<table class="table table-bordered table-hover table-responsive">
  <thead>
    <tr>
      <th><%= %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:category) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:address) %></th>
      <th><%= model_class.human_attribute_name(:phone) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= image_tag restaurant.image_url(:thumb).to_s %></td>
        <td><%= restaurant.name %></td>
        <td>
          <% restaurant.categories.each do |category| %>
            <% if category == restaurant.categories.last %>
             <%= category.name %>
            <% else %>
             <%= category.name %></br>
            <% end -%>
          <% end -%>
        </td>
        <td><%= restaurant.description %></td>
        <td><%= restaurant.address %></td>
        <td><%= restaurant.phone %></td>
        <td>
            <% if (current_user.present?) && (current_user.owner?) && (current_user == restaurant.owner) -%>
              <a class="btn btn-success" href=<%= restaurant_path(restaurant) %> ><i class="icon-search icon-white"></i></a>
              <%= link_to t('.edit', :default => t("helpers.links.edit")),
                          edit_restaurant_path(restaurant), :class => 'btn' %>
              <%= link_to t('delete'),
                          restaurant_path(restaurant),
                          :method => :delete,
                          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                          :class => 'btn btn-danger' %>
            <% else %>
              <a class="btn btn-success btn-large" href=<%= restaurant_path(restaurant) %> ><i class="icon-search icon-white"></i></a>
            <% end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if user_signed_in? && current_user.owner? -%>
  <%= link_to t('Create_new_restaurant'),
              new_restaurant_path,
              :class => 'btn btn-primary' %>
  <%= link_to t('Browse_by_categories'),
        categories_path,
        :class => 'btn btn' %>
<% else -%>
  <%= link_to t('Browse_by_categories'),
            categories_path,
            :class => 'btn btn-primary' %>
<% end -%>

