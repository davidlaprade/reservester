<%- model_class = Restaurant -%>
<div class="page-header">
  <h1><%=t '@restaurant.name', :default => model_class.human_attribute_name(@restaurant.name).titleize %></h1>
</div>

<%= image_tag @restaurant.image_url(:masthead).to_s %>

<dl class="dl-horizontal">
  <dd></dd>
  <dt><strong><%= model_class.human_attribute_name(:restaurant_name) %>:</strong></dt>
  <dd><%= @restaurant.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:owner_name) %>:</strong></dt>
  <dd><%= @restaurant.created_by %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @restaurant.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address) %>:</strong></dt>
  <dd><%= @restaurant.address %></dd>
  <dt><strong><%= model_class.human_attribute_name(:phone_number) %>:</strong></dt>
  <dd><%= @restaurant.phone %></dd>
</dl>

<% if (current_owner.present?) && (@restaurant.created_by.present?) && (current_owner.name == @restaurant.created_by) -%>
  <table class="table table-striped">
    <thead>
      <tr>
        <th><%= %></th>
        <th><%= model_class.human_attribute_name(:name_of_guests) %></th>
        <th><%= model_class.human_attribute_name(:time) %></th>
        <th><%= model_class.human_attribute_name(:date) %></th>
        <th><%=t '.actions', :default => t("helpers.actions") %></th>
      </tr>
    </thead>
    <tbody>
      <% @reservations.each do |reservation| %>
        <tr>
          <td><%= reservation.name %></td>
          <td><%= reservation.time %></td>
          <td><%= reservation.date %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end -%>

<div class="form-group">
    <label class="col-sm-2 control-label">Find us on the map!</label>
    <div class="col-sm-10">
      <p class="form-control-static">
        <%= link_to image_tag("http://maps.googleapis.com/maps/api/staticmap?key=#{ENV['GOOGLE_STATIC_MAPS_API_KEY']}&size=400x400&maptype=roadmap&markers=size:mid|color:red|#{@restaurant.address}"), "http://maps.google.com?q=#{@restaurant.address}"
        %>
      </p>
    </div>
  </div>




<div class="form-actions">
  <% if !(current_owner.present?) || !(current_owner.name == @restaurant.created_by) -%>
    <%= link_to t('Book Table'),
                new_restaurant_reservation_path(@restaurant), :class => 'btn'  %>
  <% end -%>

  <%= link_to t('home'),
              restaurants_path, :class => 'btn'  %>

  <% if (current_owner.present?) && (@restaurant.created_by.present?) && (current_owner.name == @restaurant.created_by) -%>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_restaurant_path(@restaurant), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              restaurant_path(@restaurant),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
  <% end -%>

</div>
