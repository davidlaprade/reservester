<%= form_for @category, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :category_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :restaurants, :class => 'control-label' %>
    <div class="controls">
      <% if @category.restaurants.present? %>
        <% @category.restaurants.each do |restaurant| %>
           <%= restaurant.name %>
           <%= link_to "Show", restaurant_path(restaurant)  %></br>
        <% end -%>
      <% else %>
        <%= There are no restaurants in this category %></br>
      <% end -%>
    </div>
      <%= link_to t('Home', :default => t("helpers.links.cancel")),
            restaurants_path, :class => 'btn' %>
     </div>
<% end %>