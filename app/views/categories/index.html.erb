<%- model_class = Category -%>
<div class="page-header" style="margin-top: 50px; margin-top: 8vh">
  <h1><%= "Browse by Categories" %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:associated_restaurants) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.restaurants.count %></td>
        <td>
        <%= link_to t('.show', :default => t("helpers.links.show")),
                      category_path(category), :class => 'btn btn-mini' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

  <%= link_to t('Browse_by_restaurants'),
            root_path,
            :class => 'btn btn-primary' %>