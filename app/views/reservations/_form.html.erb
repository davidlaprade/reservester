<%= form_for [@restaurant,@reservation], :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group"> 
    <%= f.label :day_of_week, :class => 'control-label' %> 
  <div class="controls"> 
    <%= f.select :day, [['Monday','Monday'],['Tuesday','Tuesday'],['Wednesday','Wednesday'],
              ['Thursday','Thursday'],['Friday','Friday'],['Saturday','Saturday'],['Sunday','Sunday'],] %>
    </div> 
  </div>
  <div class="control-group">
    <%= f.label :time_and_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :time_and_date, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :message, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :message, :rows => 3, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :security_text, :class => 'control-label' %>
    <div class="controls">
      <%= recaptcha_tags :display => { :theme => "clean" } %>
    </div>
  </div> 


  

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>

    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                restaurant_path(@restaurant), :class => 'btn' %>
  </div>
<% end %>
